pipeline {
    agent any
    environment {
        CYPRESS_CACHE_FOLDER = '/tmp/.cache/Cypress'
    }
    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    // Install node dependencies
                    sh 'npm install'
                }
            }
        }
        stage('Run Cypress Tests') {
            steps {
                script {
                    // Run Cypress tests in headless mode
                    sh 'npx cypress run --headless'
                }
            }
        }
        stage('Publish Test Results') {
            steps {
                script {
                    // Publish the test results (Junit format)
                    junit '**/cypress/results/*.xml'
                }
            }
        }
    }
    post {
        always {
            // Clean up or post-test tasks
        }
    }
    stage('Merge Results') {
    steps {
        script {
            sh 'npx mochawesome-merge cypress/results/*.json > cypress/results/report.json'
            junit 'cypress/results/report.json'
        }
    }
}
}
